<GridPane id="gridA" fx:id="gridA" alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <SplitPane dividerPositions="0.5" orientation="VERTICAL" style="-fx-background-color: rgb(50,50, 250);">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
               <children>
                  <Label alignment="CENTER" layoutX="6.0" layoutY="14.0" prefHeight="34.0" prefWidth="149.0" text="Limit for nums?" wrapText="true" />
                  <TextField id="amount" fx:id="amount" layoutX="5.0" layoutY="57.0" promptText="Num Quantity" />
               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
               <children>
                  <Button id="calcAmount" fx:id="calcAmount" layoutX="54.0" layoutY="50.0" mnemonicParsing="false" onAction="#calcAmountA" text="Button" />
               </children>
               <effect>
                  <Glow />
               </effect>
            </AnchorPane>
        </items>
      </SplitPane>
   </children>
   <cursor>
      <Cursor fx:constant="CROSSHAIR" />
   </cursor>
</GridPane>
